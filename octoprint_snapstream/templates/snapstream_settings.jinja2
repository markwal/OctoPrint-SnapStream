<form class="form-horizontal" id="tab_plugin_snapstream">
    <div class="control-group" data-toggle="tooltip">
        <label class="control-label">{{ _('Frames per second') }}</label>
        <div class="controls">
            <input type="number" step="1" class="input-mini text-right" data-bind="value: settings.fps" />
        </div>
    </div>
    <div class="control-group">
        <div class="controls" data-toggle="tooltip" title="{{ _('If this is checked, try mjpg-streamer first and if that fails, use javascript snapshot flipping instead') }}">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: settings.fallbackonly"> {{ _('Only use snapstream when mjpg-streamer fails') }}
            </label>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: global_settings.webcam_flipH"> {{ _('Flip webcam horizontally') }}
            </label>
        </div>
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: global_settings.webcam_flipV"> {{ _('Flip webcam vertically') }}
            </label>
        </div>
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: settings.rotate90"> {{ _('Rotate 90 degrees') }}
            </label>
        </div>
    </div>
</form>
